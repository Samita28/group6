.div-2columns{
    position: absolute;
    left: 50%;
    width: 1400px;
    height: 100%;
    background-color: #d14f4b;
    transform: translate(-50%);
}

.split {
    height: 100%;
    width: 50%;
    position: absolute;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    /*padding-top: 20px;*/
  }
  
  .left {
    left: 0;
    background-color: #d14f4b;
  }
  
  .right {
    right: 0;
    background-color: #f1f1f1;
  }
  
  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  
  .centered img {
    width: 150px;
    border-radius: 50%;
  }

.column {
    /*position: absolute;*/
    bottom: 50%;
    width: 50%;
    /*padding: 10px;*/
    height: 758px;
}
  
/* Clear floats after the columns */
.row{
    position: absolute;
    left: 50%;
    right: 50%;
    top: 10%;
    max-width: 1100px;
    width: 1100px;
    max-height: 758px;
    height: 758px;
    transform: translate(-50%);
}
.row:after {
    content: "";
    display: table;
    clear: both;
}

.errorContainer{
